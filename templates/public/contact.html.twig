{% extends 'base.html.twig' %}

{% block title %}{{ htmlTitle }}{% endblock %}

{% block mainTitle %}{{ mainTitle }}{% endblock %}

{% block body %}
    <div class="titleContact">
        <hr>
        <h4>Me contacter :</h4>
        <hr>
    </div>
    <div class="row">
        <div class="col-xs-12 col-md-7">
            <form id="contact" method="post">
                <div class="row">
                    <div class="col-xs-5 col-md- form-group">
                        <input class="form-control" id="name" name="name" placeholder="Nom & Prénom" type="text" required autofocus />
                    </div>
                    <div class="col-xs-7 col-md-7 form-group">
                        <input class="form-control" id="email" name="email" placeholder="email@domain.com" type="email" required />
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-12 col-md-12 form-group">
                        <textarea class="form-control" id="message" name="message" placeholder="Message" rows="7"></textarea>
                    </div>
                </div>
                <br />
                <div class="row">
                    <div class="col-xs-6 col-md-6 form-group">
                        <button class="btn btn-primary pull-left" type="submit">Submit</button>
                    </div>
                </div>
            </form>
        </div>
        <div class="col-xs-12 col-md-5">
            <div class="row">
                <div class="hrSocial">
                    <span> <strong><p>Réseaux sociaux</p></strong>
                </span>
                    <ul class="mySocial" style="border-bottom: none;">
                        <div id="socialLinkContact">
                            <a href="https://twitter.com/hu_sonny" title="Mon Twitter"><i class="fa fa-twitter fa-2"></i></a>
                            <a href="#" title="Mon Facebook"><i class="fa fa-facebook fa-2"></i></a>
                            <a href="https://www.linkedin.com/in/sonny-hu-16001384" title="Mon Linkedin"><i class="fa fa-linkedin fa-2"></i></a>
                            <a href="https://github.com/s0nnyhu" title="Mon Github"><i class="fa fa-github fa-2"></i></a>
                        </div>
                    </ul>
                    
                    <div class="hrSocial">
                        <p>Ou me contacter par mail<br/>contact@husonny.fr</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}